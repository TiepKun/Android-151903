<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyApp." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu nền ứng dụng -->
        <item name="android:windowBackground">@color/light_gray_2</item>
        <!-- Màu chính cho các thành phần giao diện, bao gồm nền -->
        <item name="colorPrimary">@color/dark_gray</item>
        <!-- Màu phụ, có thể không cần dùng nếu chỉ dùng 2 màu -->
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorSecondary">@color/light_gray_2</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Bạn có thể tùy chỉnh các thành phần khác nếu muốn -->
    </style>

</resources>
